{% extends template_path %}

{% block id %}{{ id }}_text_{{ type }}{% endblock %}
{% block label %}<label for="{{ id }}">{{ title|raw }}</label>{% endblock %}

{% block field %}
    <div class="olh-field-content text {{ type }}">
        {{ before|raw }}<input type="{{ type }}" name="{{ name }}" id="{{ id }}" value="{{ val|raw }}" class="regular-text {{ class }}" {{ attrs|raw }} />{{ after|raw }}

        {% if type == 'range' %}
            <output id="{{ id }}_output">{{ val }}</output>
        {% endif %}
    </div>
{% endblock %}

{% block description %}
    {{ description|raw }}
{% endblock %}
